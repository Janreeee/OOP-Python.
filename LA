LA#1
class hero():
    name = "Ling"
    hp = 100
    basic_attack = 10
    role = "Assasin"
    
assasin = hero()
    
print("name: ",assasin.name)
print("role: ",assasin.role)
print("hp: ",assasin.hp)
print("role: ",assasin.role)

LA#2
class hero():
    def __init__(self,name,role):
        self.name = name
        self.role = role

hero = hero("Fanny", "Assassin")
print(hero.name,hero.role)

LA#3
class character():
    def __init__(self,name):
        self.name = name
        
    
    def describe(self,role):
        print(f'{self.name} is a {role} hero')
        
hero = character("Popol and Kupa")
hero.describe("Marksman")

LA#4
class character():
    def __init__(self,name,role):
        self.name = name
        self.role = role
    
    def __str__(self):
        return(f'{self.name} is a {self.role} hero')
        
hero = character("Popol and Kupa","Marksman")
print(hero)

LA#5
class character():
    def __init__(self,name,role):
        self.name = name
        self.role = role
    
    def __str__(self):
        return(f'{self.name} is a {self.role} hero')
        
hero = character("Popol and Kupa","Marksman")
print(hero)
